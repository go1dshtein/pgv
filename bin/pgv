#!/usr/bin/env python2.7
import os
import sys
import logging
import pgv.config
import pgv.utils
import pgv.argparser
import pgv.app


def main():
    try:
        options = pgv.argparser.parse()
        config = pgv.config.parse(pgv.utils.search_config(options.config))
        pgv.utils.setup_logging(config.logging)
        logger = logging.getLogger(__name__)
        logger.debug("begin")
        logger.debug("arguments: %s", " ".join(sys.argv))
        pgv.app.Application(config, options).run(options.command)
    except Exception, e:
        logger.exception(e)
        logger.debug("finish unsuccessfully\n\n")
        os._exit(1)
    logger.debug("finish successfully\n\n")


if __name__ == '__main__':
    main()
